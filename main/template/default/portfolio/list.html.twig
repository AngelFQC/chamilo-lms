{% set edit_img = 'edit.png'|img(22, 'Edit'|get_lang) %}
{% set visible_img = 'visible.png'|img(22, 'Invisible'|get_lang) %}
{% set invisible_img = 'invisible.png'|img(22, 'Visible'|get_lang) %}
{% set delete_img = 'delete.png'|img(22, 'Delete'|get_lang) %}

<div class="panel-group" id="accordion-list" role="tablist" aria-multiselectable="true">
    {% for item in portfolio %}
        <div class="panel panel-default">
            <div class="panel-heading" role="tab" id="heading-item-{{ item.id }}">
                <h3 class="panel-title">
                    <a href="#collapse-{{ item.id }}" class="collapsed" role="button" data-parent="#accordion-list"
                       data-toggle="collapse" aria-expanded="false" aria-controls="collapse-{{ item.id }}">
                        {{ item.title }}
                    </a>
                </h3>
                {% if allow_edit %}
                    <div class="pull-right">
                        <a href="{{ _p.web_self ~ '?' ~ _p.web_cid_query ~ '&' ~ {'action':'edit_item', 'id':item.id}|url_encode }}">
                            {{ edit_img }}
                        </a>
                        {% if item.isVisible %}
                            <a href="{{ _p.web_self ~ '?' ~ _p.web_cid_query ~ '&' ~ {'action':'hide_item', 'id':item.id}|url_encode }}">
                                {{ visible_img }}
                            </a>
                        {% else %}
                            <a href="{{ _p.web_self ~ '?' ~ _p.web_cid_query ~ '&' ~ {'action':'show_item', 'id':item.id}|url_encode }}">
                                {{ invisible_img }}
                            </a>
                        {% endif %}
                        <a href="{{ _p.web_self ~ '?' ~ _p.web_cid_query ~ '&' ~ {'action':'delete_item', 'id':item.id}|url_encode }}"
                           class="btn-delete">
                            {{ delete_img }}
                        </a>
                    </div>
                {% endif %}
                {% if _c is empty %}
                    {% if item.session %}
                        <div class="clearfix">
                            {{ 'Course'|get_lang ~ ': ' ~ itme.session.name ~ ' (' ~ item.course.title ~ ')' }}
                        </div>
                    {% elseif not item.session and item.course %}
                        <div class="clearfix">
                            {{ 'Course'|get_lang ~ ': ' ~ item.course.title }}<br>
                        </div>
                    {% endif %}
                {% endif %}
            </div>
            <div id="collapse-{{ item.id }}" class="panel-collapse collapse" role="tabpanel"
                 aria-labelledby="heading-item-{{ item.id }}">
                <div class="panel-body">
                    {{ item.content }}
                </div>
            </div>
            <div class="panel-footer">
                {{ 'CreationDate'|get_lang ~ ': ' ~ item.creationDate|api_convert_and_format_date(6) }}
                {% if item.creationDate != item.updateDate %}
                    &centerdot;
                    {{ 'UpdateDate'|get_lang ~ ': ' ~ item.updateDate|api_convert_and_format_date(6) }}
                {% endif %}
            </div>
        </div>
    {% endfor %}
</div>

<script>
    $(document).on('ready', function () {
        $('.btn-delete').on('click', function (e) {
            if (!confirm('{{ 'NoteConfirmDelete'|get_lang }} ')) {
                e.preventDefault();
            }
        });
    });
</script>
